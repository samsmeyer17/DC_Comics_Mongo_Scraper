{{#each articles}}
{{#unless saved}}

<div class="col s12 m6">
  <div class="card">
    <div class="card-image">
      <img src="{{{img}}}"></img>
      <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">&#129300;</i></a>
    </div>
    <div class="card-content">
      <p>{{{title}}}</p>
      <button data-id={{_id}} class="save-article-btn">Save Comic Cover</button>
    </div>
  </div>
</div>

{{/unless}}
{{/each}}